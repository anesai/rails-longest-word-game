<div class="container">
  <h1>New game</h1>
  <div class="letters mb-5">
    <% @letters.each do |letter| %>
        <div><%= letter %></div>
    <% end %>
  </div>

  <div class="input-form">
    <p>What is the longest word you can find?</p>
    <form action="/score" method="POST" data-turbo="false">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
      <div class="input-group mb-5">
        <input type="text" name="word" class="form-control">
        <div class="input-group-append">
          <input type="submit" value="Play" class="form-control btn btn-primary">
        </div>
    </form>
  </div>
</div>
